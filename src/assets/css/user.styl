.el-dialog.avatar-upload-wrapper
  position relative
  width 460px
  height 470px
  transform translate(-50%,-50%)
  user-select none
  .mso-even-footer
    position absolute
    bottom 0
    width:calc(100% - 60px)
    height 38px
    margin:24px 0
    text-align center
    >button
      display:inline-block
      width 120px
      border-radius :18px
      height 38px
      border :1px solid #ddd
      color #fff
      font-size 16px
      letter-spacing 2px
      line-height 38px
      &.default
        background :#ffa2ac
        margin-right 104px
      &.cancel
        background :#c1c1c1
  .el-dialog__body
    padding 20px 28px!important
    border-bottom 1px solid #efefef
  .avatar-uploader
    .tip
      /*font-size: 12px*/
      color:#999
      line-height 1em
      height 36px
  .el-upload
    display block!important
    float:left
    text-align left
    .primary-avatar-wrap
      >span
        line-height 2em
        color #ff8383
    .primary-avatar
      width 256px
      height:256px
      border: 1px dashed #d9d9d9;
      border-radius: 6px;
      cursor: pointer;
      overflow: hidden;
  .avatar-preview
    overflow hidden
    height 290px
    text-align center
    padding-left 38px
  .primary-avatar:hover
    border-color: #20a0ff;
  .avatar
    float right
    display inline-block
    width: 110px;
    height: 110px;
    border-radius 50%
    border 1px solid #ddd
    margin-top:20px


.container-wrapper
  &.userCenter
    background #fcfafb

.mw-fl-content
  float: left
  width :224px
  .mw-top-info
    overflow hidden
    background :#f5848b
    .handle-area
      text-align :center
      margin :15px 0 20px
      height :40px
      >a:first-child
        margin-right 34px
      >a
        display :inline-block
        width:80px
        height 40px
        border-radius :5px
        background :#fff
        color :#ff8383
        line-height :40px
        font-size:14px
        box-shadow :0 1px 1px #8A2222
      .private
        background:#f9c6c7
        color :#333
    .person-info
      padding : 0 16px 12px
      .username
        text-align :center
        font-size :20px
      .level
        overflow hidden
        margin:16px 0 8px
        span
          float:left
          margin-right :5px
          font-size 14px
          color #fff
        .level-progress
          overflow hidden
          margin :5px 0
          .el-progress-bar__inner
            background :#66f9ff
      .person-intro
        font-size :16px
        line-height :1.6em
    >.avatar
      width:150px
      height :150px
      margin :36px auto
      border :6px solid #ff9ca3
      border-radius :50%
      cursor pointer
  .el-menu-vertical
    background :#f29c98
    li
      display: list-item
      background:#f5adaa
      margin-bottom:6px
      text-align: center
    .el-menu-item
      color #fff
      font-size 17px
      &.active
      &:hover
        background :#fac6c8
        color :#333333!important

.mw-fr-content
  float left
  width 798px
  min-height:990px
  background #fcfafb
  padding-top 8px
  &.no-bgColor
