      min-height 116px
      padding 20px 0
      border-bottom 1px solid #efefef
      margin 10px 0
      .af-item-avatar
        position relative
        float left
        width 122px
        height 72px
        text-align center
        .el-badge
          .el-badge__content
            top 10px
            right 16px
            padding 0 6px
            line-height 17px!important
        >a img
          display inline-block
          width 72px
          height 72px
          border-radius 50%
          border 1px solid #a4a4a4
      .zdy-icon__boy,.zdy-icon__girl
        margin 0 5px
      .af-item-main
        overflow hidden
        height 100%
        margin-top 1px
        .af-item-content
          overflow hidden
          min-height 72px
          padding-right 10px
          .user-info
            font-size 14px
            span.level
              background:#74f2ff
              color :#fff
              padding 2px 5px
              line-height 1em
              font-size 12px
              border-radius 4px
        .af-handle
          width 80px
      .item-context
        font-size 14px
        line-height 2em
        padding:10px 20px 10px 0
      .more-handle
        text-align right
        color #999
        line-height 1
        >span.b-btn
          padding:0 7px
          font-size:14px
        /*margin-left 20px*/
        span
          color #D88C94
