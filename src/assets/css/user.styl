              padding-left 0
              color :#000
.breadcrumb-wrap.user
  height 44px
  line-height 44px
  font-size 14px
  padding 0 20px
  .el-breadcrumb
    height 44px
    line-height 44px
    font-size 14px
.user-tab__card
  background :#fff
  .el-tabs__header
    padding 0 20px
    height 46px
    border-bottom 1px solid #f0dcdd
  .el-tabs__item
    height 100%
    line-height 44px
    font-size 18px
    padding 0 20px!important
    margin-right 150px
  .el-tabs__item.is-active
    border-bottom :2px solid #fc6c7b!important
